<tool id="fdr.create.collection" name="Create Data Collection" version="1.0.0">
 <command>
  lsd $__tool_directory__/create_collection.lsd $start $end
 </command>
 <description>
  Create a data collection for select documents
 </description>
 <inputs>
  <param min="0" name="start" type="integer" value="0">
  </param>
  <param max="106" name="end" type="integer" value="106">
  </param>
 </inputs>
 <outputs>
  <collection format="lif" label="FDR Collection" name="list_output" type="list">
   <discover_datasets directory="outputs" pattern="__designation_and_ext__" visible="false">
   </discover_datasets>
  </collection>
 </outputs>
 <tests>
 </tests>
 <help>
  <p>
   Creates a Data Collection with the selected range of documents.
  </p>
  License
-------

FDR is in public domain
 </help>
</tool>
