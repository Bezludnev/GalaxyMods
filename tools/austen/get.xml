<tool id="austen.get" name="Jane Austen letters" version="1.0.0">
  <!--<description>

  </description>-->
  <command>
    bash $__tool_directory__/get.sh $key $output
  </command>
  <inputs>
    <param label="Letter#" name="key" type="select">
      <option value="1">Letter #1</option>
      <option value="2">Letter #2</option>
      <option value="3">Letter #3</option>
      <option value="4">Letter #4</option>
      <option value="5">Letter #5</option>
      <option value="6">Letter #6</option>
      <option value="7">Letter #7</option>
    </param>
  </inputs>
  <outputs>
    <data format="lif" label="Austen 1796 letter $key" name="output">
    </data>
  </outputs>
    <help>
      <![CDATA[

      **What it does**  

      Retrieves a single letter from Jane Austen's letters to her sister Cassandra Austen. 

      **License**

      ]]>
    </help>
  </tool>
